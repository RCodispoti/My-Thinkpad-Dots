general {
	interval = 1
 	output_format = "i3bar"
 	colors = true
 	color_good = "#AFD7B4"
 	color_degraded = "#FAB297"
	color_bad = "#FB9692"
}

order += "battery 0"
order += "volume master"
order += "disk /"
order += "tztime date"
order += "tztime eastern"

ethernet eth0 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = " %percentage%status"
        format_down = " No Battery"
        status_chr = " Charging"
        status_bat = ""
        status_unk = ""
        status_full = " Charged"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
        # file containing the PID of a vpnc process
        pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

tztime date {
	format ="%A, %b %d"
}

tztime eastern {
        format = " %l:%M %p"
        timezone = "US/Eastern"
}

load {
        format = "%5min"
}

cpu_temperature 0 {
        format = "T: %degrees °C"
        path = "/sys/devices/platform/coretemp.0/temp1_input"
}

disk "/" {
        format = " %free"
	prefix_type = custom
}

volume master {
	format = " %volume"
	format_muted = " %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}
